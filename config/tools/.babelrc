{
    "presets": [
        "react",
        "env",
        "stage-2"
    ],
    "plugins": [
        "transform-runtime",
        "syntax-dynamic-import",
        "transform-decorators-legacy",
        [
            "import",
            {
                "libraryName": "antd",
                "style": "css"
            }
        ]
    ],
    "env": {
        "production": {
            "presets": [
                "react-optimize"
            ]
        },
        "development": {
            "presets": [
                "react-hmre"
            ],
            "plugins": [
                "transform-async-to-generator",
                "transform-regenerator",
                [
                    "react-transform",
                    {
                        "transforms": [
                            {
                                "transform": "react-transform-hmr",
                                "imports": [
                                    "react"
                                ],
                                "locals": [
                                    "module"
                                ]
                            },
                            {
                                "transform": "react-transform-catch-errors",
                                "imports": [
                                    "react",
                                    "redbox-react"
                                ]
                            }
                        ]
                    }
                ]
            ]
        }
    }
}
